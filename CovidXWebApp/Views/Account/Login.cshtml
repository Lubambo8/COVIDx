
@{
    Layout = null;
}

@model SigninModel

<div class="row justify-content-center">
    <partial name="CovidX/Page/_Alert" model="Model.Alert" />
</div>

<body class="hold-transition login-page">
    <partial name="CovidX/_Styles" />
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>CO</b>-X</a>
        </div>
        <div class="card card-lightblue">
            <div class="card-header">
                <h3 class="card-title" style="text-align: center">Account Login</h3>

            </div>

            <div class="card-body login-card-body">
                <form asp-controller="Account"
                      asp-action="Login"
                      method="post">

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group mb-3">

                        <input asp-for="@Model.Email"
                               class="form-control"
                               placeholder="Enter Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                        <!-- INPUT VALIDATION MESSAGE -->
                        <span asp-validation-for="Email" class="text-danger" />
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="@Model.Password"
                               class="form-control"
                               placeholder="Enter Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <!-- INPUT VALIDATION MESSAGE -->
                        <span asp-validation-for="Password" class="text-danger" />
                    </div>

                    <div class="col-8">
                        <div class="icheck-primary">
                            <input asp-for="@Model.RememberMe">
                            <label asp-for="@Model.RememberMe">
                                Remember Me
                            </label>
                        </div>
                        <span asp-validation-for="RememberMe" class="error invalid-feedback" style="display: inline;" />
                    </div>

                    <!-- To get the returnURL value on the controller action -->
                    <input type="hidden" id="returnUrl" name="returnUrl" value="@Context.Request.Path" />
                    <div class="card-footer" style="text-align: center">
                        <button type="submit" class="btn btn-outline-primary btn-block">Login</button>
                    </div>
                </form>
                <p class="mb-0 text-center">
                    <a asp-action="Register"
                       asp-controller="Account"
                       class="text-center">Register a new Account</a>
                </p>
            </div>

        </div>
    </div>
    <partial name="CovidX/_Scripts" />
</body>
