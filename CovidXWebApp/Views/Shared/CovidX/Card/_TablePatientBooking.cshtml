<!-- 6 COLUMN CARD START -->
<div class="col-md-12">
    <div class="card">
        <!-- CARD HEADER START -->
        <div class="card-header border-0">
            <h3 class="card-title">Dependants for (name)</h3>
            <!-- CARD TOOLS START -->
            <div class="card-tools">
                <!-- ADD CARD TOOLS HERE -->
                <partial name="CovidX/Card/Tool/_collapse" />
                <partial name="CovidX/Card/Tool/_maximize" />
                <!-- <partial name="AdminLTE/Card/Tool/_remove" /> -->

            </div>
            <!-- CARD TOOLS END -->
        </div>
        <!-- CARD HEADER END -->
        <!-- CARD BODY START -->
        <div class="card-body table-responsive p-0">
            <!-- ADD CONTENT HERE -->
            <table class="table table-striped table-valign-middle">
                <thead>
                    <tr>
                        <!-- TABLE HEADERS -->
                        <th>Patient</th>
                        <th>Nurse</th>
                        <th>Test Status</th>
                        <th>Request Date</th>
                        <th>Completion Date</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- TABLE CONTENT ROW -->
                    <tr>
                        <td>
                            <img src="@Url.Content("~/img/avatar/trans-reaper.png")" alt="Avatar Image" class="img-circle img-size-32 mr-2">
                            Name Surname
                        </td>
                        <td>
                            <img src="@Url.Content("~/img/avatar/female-nurse.png")" alt="Avatar Image" class="img-circle img-size-32 mr-2">
                            Name Surname
                        </td>
                        <td>
                            <span class="badge bg-danger">Canceled</span>
                        </td>
                        <td>
                            <small class="text-success mr-1">
                                <i class="fas fa-calendar-alt"></i>
                            </small>
                            10 Oct 2:05 pm
                        </td>
                        <td>
                            <small class="text-success mr-1">
                                <i class="fas fa-calendar-alt"></i>
                            </small>
                            14 Oct 4:00 pm
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
        <!-- CARD BODY END -->
        <!-- CARD FOOTER START -->
        <div class="card-footer">
            <!-- ADD BUTTONS HERE -->

        </div>
        <!-- CARD FOOTER END -->
    </div>
</div>
<!-- 6 COLUMN CARD END -->